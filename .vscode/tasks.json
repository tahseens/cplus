{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ with clang++",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-g",
        "main.cpp",
        "*/*.cpp",
        "-o",
        "artifacts/main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$clang"]

    },
    {
      "label": "Run Compiled executable",
      "type": "shell",
      "command": "./artifacts/main",
      "group": "test",
      "dependsOn": "Build C++ with clang++"
    }

  ]

}

