{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ with clang++",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-g",
        "overandunderflow/underflow.cpp",
        "-o",
        "overandunderflow/underflow"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$clang"]

    },
    {
      "label": "Run underflow executable",
      "type": "shell",
      "command": "./overandunderflow/underflow",
      "group": "test",
      "dependsOn": "Build underflow.cpp with clang++"
    }
  ]
}

